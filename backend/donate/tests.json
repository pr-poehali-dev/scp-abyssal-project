{
  "tests": [
    {
      "name": "Create donation with valid Steam ID64",
      "method": "POST",
      "body": {
        "steam_id": "76561198000000001",
        "amount": 100,
        "user_email": "test@example.com"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "payment_url": "string",
        "order_id": "number",
        "order_number": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reject invalid Steam ID",
      "method": "POST",
      "body": {
        "steam_id": "invalid123",
        "amount": 100
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Некорректный Steam ID"
      },
      "bodyMatcher": "partial"
    }
  ]
}
